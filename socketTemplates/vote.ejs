<div id="voteView intese-shadow">
    <p class="text-2xl p-4 text-center font-bold bg-gray-800 m-2 text-white rounded-lg">Who is The AI?</p>
    <label for="prompt" class="text-sm p-2 font-semibold">Prompt</label>
    <p id="prompt" class="p-4 bg-zinc-300 font-semibold m-2 rounded-lg"><%= prompt %></p>
    
    <label for="responses" class="text-sm p-2 font-semibold">Responses</label>
    <div id="responses" class="m-2">
        <% for(let i = 0; i < players.length; i++) { %>
            <!-- Passes list of sockets -->
            <div class="bg-gray-300 rounded-lg flex mt-2 w-full justify-between items-center " id="<%= players[i].request.session.game.alias %>Card">
                <div class="flex flex-col w-full ">

                    <div class="flex items-center">
                        <div class="flex-grow flex items-center gap-2">

                            <div class="w-16 h-16 p-2 rounded-full bg-gray-300">
                                <img src="<%= players[i].request.session.game.aliasPicture %>" alt="Player Image"
                                    class="w-full h-full rounded-full">
                            </div>

                            <div class="text-sm font-semibold p-2">
                                <%= players[i].request.session.game.alias %>
                            </div>

                        </div>

                        <div
                            class="bg-blue-600 text-white font-semibold text-sm rounded-md w-44 h-14 m-2 text-center flex items-center justify-center">
                            Vote
                        </div>
                    </div>

                    <div class="p-1 break-words">
                        <p class="text-sm break-words w-full">
                            <%= players[i].request.session.game.response %>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>