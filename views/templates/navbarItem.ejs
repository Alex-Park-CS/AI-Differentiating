<!-- Parts of class options taken from https://flowbite.com/docs/components/navbar/ -->
<% if (currentPage === "/") { %>
    <% if (pageLink === currentPage) { %>
    <li><a href="<%= pageLink %>" class="block py-2 px-3 font-semibold text-sky-500 rounded md:text-sky-400 md:font-normal md:p-0 hover:text-sky-600" aria-current="page"><%= label %></a></li>
    <% } else { %>
    <li><a href="<%= pageLink %>" class="block py-2 px-3 text-gray-200 rounded md:hover:bg-transparent md:border-0 md:p-0 hover:text-gray-400"><%= label %></a></li>
    <% } %>

<% } else { %>        
    <% if (pageLink === currentPage) { %>
    <li><a href="<%= pageLink %>" class="block py-2 px-3 text-white font-semibold bg-gradient-to-t from-sky-400 to-sky-700 rounded md:bg-none md:text-sky-400 md:p-0" aria-current="page"><%= label %></a></li>
    <% } else { %>
    <li><a href="<%= pageLink %>" class="block py-2 px-3 text-gray-200 rounded hover:bg-gray-700 md:hover:bg-transparent md:border-0 md:hover:text-sky-600 md:p-0"><%= label %></a></li>
    <% } %>
<% } %>
